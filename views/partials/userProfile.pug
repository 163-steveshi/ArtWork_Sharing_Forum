      a(href=`http://localhost:3000/users/${f.artistID}`) #{f.artistName}
      -count++
      //-dispaly the button of unfollow
      -if( login && user.userName === loginUser)
        button(class="unfollow" id=`uf${followNumber}` value = `${f.artistID}`) UnFollow
        -followNumber ++
